{
    "compilerOptions": {
        "target": "ES2017",
        "outDir": "./lib/esm",
        "module": "ES2015",
        "declaration": true,
        "lib": ["ESNext"],
        "baseUrl": "./src",
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declarationMap": true
    },
    "include": ["./src/**/*"]
}
